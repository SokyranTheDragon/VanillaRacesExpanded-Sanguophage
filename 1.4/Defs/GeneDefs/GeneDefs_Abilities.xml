    <iconPath>UI/Icons/Genes/Gene_SanguophageHemosmosis</iconPath>
	<prerequisite>Hemogenic</prerequisite>
    <displayCategory>Ability</displayCategory>
   
    <abilities>
      <li>VRE_Hemosmosis</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>VRE_Hemosmosis</AbilityDef>
    </descriptionHyperlinks>
    <biostatMet>-1</biostatMet>
    <symbolPack>
    
      <prefixSymbols>
        <li><symbol>sucker</symbol></li>
    
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>sucker</symbol></li>
        <li><symbol>drainer</symbol></li>
        <li><symbol>osmoser</symbol></li>
       
      </suffixSymbols>
    </symbolPack>
  </GeneDef>

  

